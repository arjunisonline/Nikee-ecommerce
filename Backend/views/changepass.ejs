<div class="container-fluid position-relative" style="height: 100vh;">
  <img src="/images/stand-bg.jpg" class="w-100 h-100 position-absolute top-0 start-0"
    style="object-fit: cover; z-index: 0;">

  <form action="/admin/changepass" method="post"
    class="position-absolute top-50 start-50 translate-middle transparent-bg p-5 w-75 rounded shadow"
    style="z-index: 10;">
    <h4 class="mb-3 text-center">Change Password</h4>

    <% if (errors && errors.length> 0) { %>
      <div style="color: red;">
        <ul>
          <% errors.forEach(function(error) { %>
            <li>
              <%= error.msg %>
            </li>
            <% }); %>
        </ul>
      </div>
      <% } %>
        <% if (message) { %>
          <div style="color: red;">
            <ul>

              <li>
                <%= message %>
              </li>

            </ul>
          </div>
          <% } %>
            <div class="mb-3">
              <label for="InputOldPassword" class="form-label">Old Password</label>
              <input type="password" class="form-control" id="InputOldPassword" name="inputOldPassword">
            </div>

            <div class="mb-3">
              <label for="InputNewPassword" class="form-label">New Password</label>
              <input type="password" class="form-control" id="InputNewPassword" name="InputNewPassword">
            </div>

            <div class="mb-3">
              <label for="InputConfirmNewPassword" class="form-label">Confirm Password</label>
              <input type="password" class="form-control" id="InputConfirmNewPassword" name="InputConfirmNewPassword">
            </div>

            <div class="mb-3">
              <input type="submit" class="btn btn-primary w-100" value="Change Password">
            </div>
  </form>
</div>