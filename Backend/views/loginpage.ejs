<div class="container-fluid position-relative" style="height: 100vh;">
  <img src="images/bg-shoes.jpg" class="w-100 h-100 position-absolute top-0 start-0"
    style="object-fit: cover; z-index: 0;" />
  <form action="/login" method="post"
    class="position-absolute top-50 start-50 translate-middle bg-white p-4 rounded shadow"
    style="z-index: 10; width: 350px;">
    <h4 class="mb-3 text-center">Admin Login</h4>
    <% if (errors && errors.length> 0) { %>
      <div style="color: red;">
        <ul>
          <% errors.forEach(function(error) { %>
            <li>
              <%= error.msg %>
            </li>
            <% }); %>
        </ul>
      </div>
      <% } %>
        <% if (message) { %>
          <div style="color: red;">
            <ul>

              <li>
                <%= message %>
              </li>

            </ul>
          </div>
          <% } %>
            <div class="mb-3">
              <label for="InputEmail" class="form-label">Email address</label>
              <input type="email" name="email" class="form-control" id="InputEmail" required />
            </div>

            <div class="mb-3">
              <label for="InputPassword" class="form-label">Password</label>
              <input type="password" name="password" class="form-control" id="InputPassword" required />
            </div>

            <div class="mb-3">
              <input type="submit" class="btn btn-primary w-100" value="Login" />
            </div>
  </form>
</div>